#include <stdio.h>

int main() {
    int number, reversed = 0, sign = 1;
    
    printf("Enter an integer: ");
    scanf("%d", &number);
    
    if (number < 0) {
        sign = -1;
        number = -number; 
    }
    
    while (number > 0) {
        int digit = number % 10; 
        reversed = reversed * 10 + digit; 
        number /= 10; 
    }
    
    reversed *= sign;
    
    printf("Reversed number: %d\n", reversed);
    
    return 0;
}
