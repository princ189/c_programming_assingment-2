#include <stdio.h>

int main() {
    float values[10], sum = 0.0, mean;

    printf("Enter 10 values:\n");
    for (int i = 0; i < 10; i++) {
        printf("Value %d: ", i + 1);
        if (scanf("%f", &values[i]) != 1) {
            printf("Invalid input! Please enter a valid number.\n");
            return 1;
        }
        sum += values[i];
    }

    mean = sum / 10;

    printf("\nEntered values: ");
    for (int i = 0; i < 10; i++) {
        printf("%.2f ", values[i]);
    }
    printf("\nSum of the 10 values: %.2f\n", sum);
    printf("Mean of the 10 values: %.2f\n", mean);

    return 0;
}
