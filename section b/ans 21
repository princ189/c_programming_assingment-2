#include <stdio.h>

int main() {
    int number;
    
    printf("Enter a positive integer: ");
    scanf("%d", &number);
    
    if (number <= 0) {
        printf("Please enter a positive integer.\n");
        return 1;
    }
    
    printf("Digits of %d are: ", number);
    while (number > 0) {
        int digit = number % 10; 
        printf("%d", digit);
        number /= 10; 
        if (number > 0) {
            printf(", "); 
        }
    }
    printf("\n");
    
    return 0;
}
