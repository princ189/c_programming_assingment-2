#include <stdio.h>

int main() {
    int number, original, reversed = 0;
    
    printf("Enter an integer: ");
    scanf("%d", &number);

    original = number;
    
    if (number < 0) {
        printf("%d is not a palindrome (negative numbers are not palindromic).\n", number);
        return 0;
    }
   
    while (number > 0) {
        int digit = number % 10;
        reversed = reversed * 10 + digit; 
        number /= 10; 
    }
    
    if (original == reversed) {
        printf("%d is a palindrome.\n", original);
    } else {
        printf("%d is not a palindrome.\n", original);
    }
    
    return 0;
}
