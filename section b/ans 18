#include <stdio.h>

int main() {
    char sex_code;
    int boys = 0, girls = 0, i;
    
    printf("Enter sex code for 50 students (M for male, F for female):\n");
    for (i = 0; i < 50; i++) {
        printf("Student %d: ", i + 1);
        scanf(" %c", &sex_code); 
        
        if (sex_code == 'M' || sex_code == 'm') {
            boys++;
        } else if (sex_code == 'F' || sex_code == 'f') {
            girls++;
        } else {
            printf("Invalid input! Please enter M or F.\n");
            i--;
        }
    }
    
    printf("Number of boys: %d\n", boys);
    printf("Number of girls: %d\n", girls);
    
    return 0;
}
