#include <stdio.h>

int main() {
    int n;
    unsigned long long factorial = 1; 

    printf("Enter a number to calculate its factorial: ");
    scanf("%d", &n);

    if (n < 0) {
        printf("Factorial is not defined for negative numbers.\n");
        return 1;
    }
    if (n > 20) { 
        printf("Number is too large! Please enter a number between 0 and 20.\n");
        return 1;
    }

    if (n == 0 || n == 1) {
        factorial = 1;
    } else {
        for (int i = 2; i <= n; i++) {
            factorial *= i;
        }
    }

    printf("Factorial of %d (i.e., %d!) = %llu\n", n, n, factorial);

    return 0;
}
