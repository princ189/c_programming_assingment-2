#include <stdio.h>

int main() {
    int number;
    int sum = 0;

    printf("Enter an integer: ");
    scanf("%d", &number);
 
    if (number < 0) {
        number = -number;
    }

    if (number == 0) {
        sum = 0;
    } else {
        
        while (number > 0) {
            sum += number % 10; 
            number /= 10;   
        }
    }
  
    printf("Sum of digits: %d\n", sum);
    
    return 0;
}
