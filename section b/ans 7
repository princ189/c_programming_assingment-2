#include <stdio.h>

int main() {
    int n;

    printf("Enter the number of natural numbers (n): ");
    scanf("%d", &n);

    if (n <= 0) {
        printf("Please enter a positive integer.\n");
        return 1;
    }

    int sum = n * (n + 1) / 2;

    printf("The sum of the first %d natural numbers is: %d\n", n, sum);

    return 0;
}
