#include <stdio.h>
#include <math.h>

int main() {
    int number, original, digit_count = 0, sum = 0;
 
    printf("Enter an integer: ");
    scanf("%d", &number);

    if (number < 0) {
        printf("%d is not an Armstrong number (negative numbers are not considered).\n", number);
        return 0;
    }

    original = number;

    int temp = number;
    if (temp == 0) {
        digit_count = 1; 
    } else {
        while (temp > 0) {
            temp /= 10;
            digit_count++;
        }
    }
    
    temp = number;
    while (temp > 0) {
        int digit = temp % 10; 
        sum += pow(digit, digit_count); 
        temp /= 10; 
    }
    
    if (sum == original) {
        printf("%d is an Armstrong number.\n", original);
    } else {
        printf("%d is not an Armstrong number.\n", original);
    }
    
    return 0;
}
