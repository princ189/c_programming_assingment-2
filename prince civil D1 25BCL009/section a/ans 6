#include <stdio.h>
#include <string.h>

int main() {
    float marks1, marks2, marks3, total, average;
    char grade[20];

    printf("Enter marks for Subject 1 (0-100): ");
    scanf("%f", &marks1);
    if (marks1 < 0 || marks1 > 100) {
        printf("Invalid marks! Marks should be between 0 and 100.\n");
        return 1;
    }

    printf("Enter marks for Subject 2 (0-100): ");
    scanf("%f", &marks2);
    if (marks2 < 0 || marks2 > 100) {
        printf("Invalid marks! Marks should be between 0 and 100.\n");
        return 1;
    }

    printf("Enter marks for Subject 3 (0-100): ");
    scanf("%f", &marks3);
    if (marks3 < 0 || marks3 > 100) {
        printf("Invalid marks! Marks should be between 0 and 100.\n");
        return 1;
    }

    if (marks1 < 35 || marks2 < 35 || marks3 < 35) {
        strcpy(grade, "Fail");
    } else {

        total = marks1 + marks2 + marks3;
        average = total / 3;

        if (average >= 70) {
            strcpy(grade, "Distinction");
        } else if (average >= 60) {
            strcpy(grade, "First Class");
        } else if (average >= 50) {
            strcpy(grade, "Second Class");
        } else if (average >= 35) {
            strcpy(grade, "Third Class");
        } else {
            strcpy(grade, "Fail");
        }
    }

    printf("\nResults:\n");
    printf("Subject 1: %.2f\n", marks1);
    printf("Subject 2: %.2f\n", marks2);
    printf("Subject 3: %.2f\n", marks3);
    
    if (marks1 >= 35 && marks2 >= 35 && marks3 >= 35) {
        printf("Total Marks: %.2f\n", total);
        printf("Average Marks: %.2f\n", average);
    }
    printf("Grade: %s\n", grade);

    return 0;
}
