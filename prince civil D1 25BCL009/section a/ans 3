#include <stdio.h>

int main() {
    float gross_salary, allowance, deduction, net_salary;

    printf("Enter Gross Salary: ");
    scanf("%f", &gross_salary);

    allowance = 0.0;
    deduction = 0.0;

    if (gross_salary > 10000) {
        allowance = 0.10 * gross_salary; // 10% allowance
        deduction = 0.03 * gross_salary; // 3% deduction
    } else if (gross_salary > 5000) {
        allowance = 0.07 * gross_salary; // 7% allowance
        deduction = 0.02 * gross_salary; // 2% deduction
    }

    net_salary = gross_salary + allowance - deduction;

    printf("Gross Salary: %.2f\n", gross_salary);
    printf("Allowance: %.2f\n", allowance);
    printf("Deduction: %.2f\n", deduction);
    printf("Net Salary: %.2f\n", net_salary);

    return 0;
}
