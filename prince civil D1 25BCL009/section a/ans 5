#include <stdio.h>

int main() {
    float gross_sales, discount, net_sales;

    printf("Enter Gross Sales: ");
    scanf("%f", &gross_sales);

    if (gross_sales > 20000) {
        discount = gross_sales * 0.15; // 15% discount
    } else if (gross_sales > 10000) {
        discount = gross_sales * 0.10; // 10% discount
    } else {
        discount = gross_sales * 0.05; // 5% discount
    }

    net_sales = gross_sales - discount;

    printf("Gross Sales: %.2f\n", gross_sales);
    printf("Discount: %.2f\n", discount);
    printf("Net Sales: %.2f\n", net_sales);

    return 0;
}
